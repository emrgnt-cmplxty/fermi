{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "@mysten/sui.js": ["../../sdk/typescript/src/"],
            "@mysten/bcs": ["../../sdk/bcs/src/"],
            "@mysten/wallet-adapter-base": [
                "../../sdk/wallet-adapter/packages/adapters/base-adapter/src/"
            ],
            "@mysten/wallet-standard": [
                "../../sdk/wallet-adapter/packages/wallet-standard/src/"
            ],
            "@mysten/wallet-adapter-wallet-standard": [
                "../../sdk/wallet-adapter/packages/adapters/wallet-standard-adapter/src/"
            ],
            "@mysten/wallet-adapter-react": [
                "../../sdk/wallet-adapter/packages/react-providers/src/"
            ],
            "@mysten/wallet-adapter-react-ui": [
                "../../sdk/wallet-adapter/packages/ui/src/"
            ]
        }
    },
    "include": ["src"]
}
