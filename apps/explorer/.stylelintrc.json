{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-standard-scss",
        "stylelint-config-prettier"
    ],
    "rules": {
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["tailwind"]
            }
        ],
        "function-no-unknown": [
            true,
            {
                "ignoreFunctions": ["theme"]
            }
        ]
    }
}
